# Configuration d'exemple - Copier dans .env et configurer

# Base de données MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=uor_university
DB_PORT=3306

# Sécurité
SECRET_KEY=your-secret-key-change-in-production
JWT_EXPIRATION=3600
PASSWORD_MIN_LENGTH=6
FINANCIAL_THRESHOLD=0.00

# Email (Gmail)
EMAIL_SERVICE=gmail
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# WhatsApp (Twilio)
WHATSAPP_ACCOUNT_SID=
WHATSAPP_AUTH_TOKEN=
WHATSAPP_FROM=

# Arduino
ARDUINO_PORT=COM3
ARDUINO_BAUD_RATE=9600

# Application
DEBUG=False
LOG_LEVEL=INFO
